@model SimplCommerce.Module.Search.Areas.Search.ViewModels.SearchForm

<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
    <div class="container-search-header">
        <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
            <img src="~/themes/CozaStore/images/icons/icon-close2.png" alt="CLOSE">
        </button>

        <form method="get" action="~/search" class="wrap-search-header flex-w p-l-15">
            <button class="flex-c-m trans-04">
                <i class="zmdi zmdi-search"></i>
            </button>
            <input class="plh3" type="text" name="query" placeholder="@Localizer["Search here..."]">
        </form>
    </div>
</div>