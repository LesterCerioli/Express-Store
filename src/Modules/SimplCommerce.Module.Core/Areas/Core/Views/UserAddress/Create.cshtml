@model SimplCommerce.Module.Core.Areas.Core.ViewModels.UserAddressFormViewModel
@{
    ViewData["Title"] = Localizer["Create address"];
}

<div class="row">
    <div class="col-md-3">
        <partial name="_AccountMenu" />
    </div>
    <div class="col-md-9">
        <h2>@Localizer["Create Address"]</h2>
        <hr />
        <form asp-area="Core" asp-controller="UserAddress" asp-action="Create" method="POST">
            <partial name="_AddressForm" model="Model" />
        </form>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/_content/SimplCommerce.Module.Core/user-address.js"></script>
}
